	<%
	String phone = request.getParameter("phone");
	if (phone != null) {
		out.println("<h2>");
		out.println("통신사 : " + phone);
		out.println("</h2>");
	}

	String[] movies = request.getParameterValues("movie");
	if (movies != null) {
		out.println("<h3>선택된 영화들</h3>");
		out.println("<ul>");
		for (String m : movies) {
			out.println("<li>");
			out.println(m);
			out.println("</li>");
		}
		out.println("</ul>");
	}
